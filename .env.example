# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_bot_token_here

# Bot Application Client ID
CLIENT_ID=your_client_id_here

# Authorized Guild (Server) ID
GUILD_ID=your_guild_id_here

# --- Channel Configuration ---

# ID of the channel where help requests are posted for review
REQUESTS_CHANNEL_ID=your_requests_channel_id_here

# ID of the category where help request channels will be created
CATEGORY_ID=your_category_id_here

# ID of the channel for bot logging and status updates
LOG_CHANNEL_ID=your_log_channel_id_here

# --- Role Configuration ---

# ID of the role required to use helper-specific commands (e.g., /toggleavailable)
HELPER_ROLE_ID=your_helper_role_id_here

# --- Database Configuration ---

# The path to the SQLite database file (relative to project root)
DATABASE_PATH=database.sqlite
